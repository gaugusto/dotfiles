{
  "position": "top",
  "margin-top": 10,
  "modules-left": [
    "hyprland/workspaces"
  ],
  "modules-center": [
    "clock"
  ],
  "modules-right": [
    "tray",
    // "custom/weather",
    "power-profiles-daemon",
    "cpu",
    "battery",
    "pulseaudio",
    "network",
    "custom/notification"
  ],
  // "clock": {
